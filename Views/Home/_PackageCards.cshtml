@model IEnumerable<Karnel_Travels.Models.Package>

@foreach (var package in Model)
{
    <div class="col-md-4">
        <div class="project-wrap" data-table="package" data-id="@package.PackageId">
            <a class="img">
                <img src="~/@package.PackageImage" class="img" alt="Hotel Image" />
                <span class="price">$@package.PackagePrice/person</span>
            </a>
            <div class="text p-4">
                <span class="days">@package.PackageTour</span>
                <h3><a>@package.PackageName</a></h3>
                <p class="location"><span class="fa fa-map-marker"></span> @package.PackageDescription</p>
                <ul>
                    <li><span class="flaticon-shower"></span>2</li>
                    <li><span class="flaticon-king-size"></span>3</li>
                    <li><span class="flaticon-mountains"></span>Near Mountain</li>
                </ul>
            </div>
        </div>
    </div>
}