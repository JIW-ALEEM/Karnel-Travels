@model IEnumerable<Karnel_Travels.Models.Restaurant>

@foreach (var Restaurant in Model)
{
    <div class="col-md-4 ">

        <div class="project-wrap Restaurant" data-table="Restaurant" data-id="@Restaurant.RestaurantId">
            <a  class="img">
                <img src="~/@Restaurant.RestaurantImage" class="img" alt="Restaurants Image" />
                <span class="price">Rs @Restaurant.RestaurantPrice/person</span>
            </a>
            <div class="text p-4">
                <p class="star mb-2">
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </p>
                <h3><a>@Restaurant.RestaurantName</a></h3>
                <p class="location"><span class="fa fa-map-marker"></span>@Restaurant.RestaurantLocation</p>
            </div>
        </div>
    </div>
    
}