@model IEnumerable<Karnel_Travels.Models.Restaurant>

@foreach (var Restaurant in Model)
{
    <div class="col-md-4 ">

        <div class="project-wrap Restaurant" data-table="Restaurant" data-id="@Restaurant.RestaurantId">
            <a href="#" class="img">
                <img src="~/@Restaurant.RestaurantImage" class="img" alt="Restaurants Image" />
                <span class="price">$@Restaurant.RestaurantPrice/person</span>
            </a>
            <div class="text p-4">
                <p class="star mb-2">
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </p>
                <span class="days">8 Days Tour</span>
                <h3><a href="#">@Restaurant.RestaurantName</a></h3>
                <p class="location"><span class="fa fa-map-marker"></span>@Restaurant.RestaurantLocation</p>
                <ul>
                    <li><span class="flaticon-shower"></span>2</li>
                    <li><span class="flaticon-king-size"></span>3</li>
                    <li><span class="flaticon-mountains"></span></li>
                </ul>
            </div>
        </div>
    </div>
    
}