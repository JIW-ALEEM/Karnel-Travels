@model Karnel_Travels.Models.Hotel;
@{
    Layout = "_AdminLayout";
}


<div class="main_content_iner ">
    <div class="container-fluid plr_30 body_white_bg pt_30">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_box mb_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">

                            <div class="modal-content cs_modal">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add Hotel</h5>
                                </div>
                                <div class="modal-body">
                                    <form enctype="multipart/form-data" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group mb-3">
                                            <input type="hidden" asp-for="HotelId" class="form-control" />
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="HotelName" placeholder="Enter Hotel Name">
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="HotelRooms" placeholder="Enter Hotel Rooms">
                                        </div>
                                        <div>
                                            <input class="form-control pt-0" type="file" name="file">
                                            <img src="~/@Model.HotelImage" width="60" height="60">
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="HotelDescription" placeholder="Enter Hotel Description">
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="HotelPrice" placeholder="Enter Hotel Price">
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="HotelLocation" placeholder="Enter Hotel Location">
                                        </div>
                                        <button type="submit" class="btn_1 full_width text-center">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>