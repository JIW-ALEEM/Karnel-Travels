@model Karnel_Travels.Models.TouristSpot;
@{
    Layout = "_AdminLayout";
}


<div class="main_content_iner ">
    <div class="container-fluid plr_30 body_white_bg pt_30">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_box mb_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">

                            <div class="modal-content cs_modal">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add Tourist Spot</h5>
                                </div>
                                <div class="modal-body">
                                    <form method="post" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()
                                        <div>
                                            
                                            <input type="text" class="form-control" asp-for="SpotName"
                                                   placeholder="Enter Spot Name">
                                            <span asp-validation-for="SpotName" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <input type="file" class="form-control pt-0" asp-for="SpotImage"
                                                   placeholder="Enter Spot Image">
                                            <span asp-validation-for="SpotImage" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="SpotDescription" placeholder="Enter Spot Description">
                                            <span asp-validation-for="SpotDescription" class="text-danger"></span>
                                        </div>
                                        <div>
                                            <input type="number" class="form-control" asp-for="SpotPrice" placeholder="Enter Spot Price">
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="SpotLocation" placeholder="Enter Spot Location">
                                            <span asp-validation-for="SpotLocation" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn_1 full_width text-center">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>