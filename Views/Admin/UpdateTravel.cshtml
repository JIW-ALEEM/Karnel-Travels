@model Karnel_Travels.Models.Travel;
@{
    Layout = "_AdminLayout";
}


<div class="main_content_iner ">
    <div class="container-fluid plr_30 body_white_bg pt_30">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_box mb_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">

                            <div class="modal-content cs_modal">
                                <div class="modal-header">
                                    <h5 class="modal-title">Update Travel</h5>
                                </div>
                                <div class="modal-body">
                                    <form enctype="multipart/form-data" asp-controller="Admin" asp-action="UpdateTravel2">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group mb-3">
                                            <input type="hidden" asp-for="TravelId" class="form-control" />
                                        </div>
                                        <div>
                                            <input type="text" class="form-control" asp-for="TravelMode" placeholder="Enter Spot Name">
                                        </div>                                      
                                        <div>
                                            <input type="text" class="form-control" asp-for="TravelDescription" placeholder="Enter Spot Description">
                                        </div>
                                        <button type="submit" class="btn_1 full_width text-center">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

