@model Karnel_Travels.Models.Travel;
@{
    Layout = "_AdminLayout";
}

    <div class="main_content_iner ">
        <div class="container-fluid plr_30 body_white_bg pt_30">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="white_box mb_30">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">

                                <div class="modal-content cs_modal">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add Travel Mode</h5>
                                    </div>
                                    <div class="modal-body">
                                    <form method="post">
                                        @Html.AntiForgeryToken()
                                            <div>
                                            <input type="text" class="form-control" asp-for="TravelMode" placeholder="Enter Travel Mode">
                                            <span asp-validation-for="TravelMode" class="text-danger"></span>
                                        </div>
                                            <div>
                                            <input class="form-control" type="text" asp-for="TravelDescription" placeholder="Enter Travel Description">
                                            <span asp-validation-for="TravelDescription" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn_1 full_width text-center">Submit</button>
                                    </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

